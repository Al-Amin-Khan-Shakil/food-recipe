<div class="form-wrapper">
  <h2 class="form-title">New Food</h2>
  <%= form_with model: food, url: foods_url, method: :post, local: true, scope: :food, class: "food-form" do |f| %>
    <div class="form-item">
      <%= f.label :Name, class: "label-name" %><br>
      <%= f.text_field :name, class: "input-name" %>
    </div>
    <div class="form-item">
      <%= f.label :Measurement_unit, class: "label-measurement-unit" %><br>
      <%= f.text_field :measurement_unit, class: "input-measurement-unit" %>
    </div>
    <div class="form-item">
      <%= f.label :Price, class: "label-price" %><br>
      <%= f.text_field :price, class: "input-price" %>
    </div>
    <div class="form-item">
      <%= f.label :Quantity, class: "label-quantity" %><br>
      <%= f.text_field :quantity, class: "input-quantity" %>
    </div>

    <%= f.submit "Add Food", class: "submit-button" %>
  <% end %>
</div>

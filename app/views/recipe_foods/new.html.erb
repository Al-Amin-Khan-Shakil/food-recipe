<div class="recipe-food-form-container">
  <h2>New Recipe Food</h2>
  <%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe), method: :post, class: 'recipe-food-form') do |form| %>
    <% if @recipe_food.errors.any? %>
      <div class="alert alert-danger">
        <strong>Error:</strong> <%= @recipe_food.errors.full_messages.to_sentence %>
        <% if @recipe_food.errors[:recipe_id].include?("Food already exists ") %>
          <p>...</p>
        <% end %>
      </div>
    <% end %>
    <div class="recipe-food-form-section">
      <%= form.label :quantity, class: 'recipe-food-form-label' %>
      <%= form.number_field :quantity, class: 'recipe-food-form-input' %>
    </div>
    <div class="recipe-food-form-section">
      <%= form.label :food_id, class: 'recipe-food-form-label' %>
      <%= form.collection_select :food_id, current_user.foods, :id, :name, { prompt: 'Select Food' }, class: 'recipe-food-form-select' %>
    </div>
    <div class="recipe-food-form-section">
      <%= form.submit 'Create Recipe Food', class: 'recipe-food-form-submit' %>
    </div>
  <% end %>
</div>

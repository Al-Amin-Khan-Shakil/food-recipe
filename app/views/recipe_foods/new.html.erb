<h2>New Recipe Food</h2>

<%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe), method: :post) do |form| %>
  <div>
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :food_id %>
    <%= form.collection_select :food_id, Food.all, :id, :name %>
  </div>

  <div>
    <%= form.submit 'Create Recipe Food' %>
  </div>
<% end %>

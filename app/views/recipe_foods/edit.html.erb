<div class="edit-recipe-food-form-container">
  <h2>Edit Recipe Food</h2>

  <%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_food_path(@recipe, @recipe_food), method: :patch, class: 'edit-recipe-food-form') do |form| %>
    <div class="edit-recipe-food-form-section">
      <%= form.label :quantity, class: 'edit-recipe-food-form-label' %>
      <%= form.number_field :quantity, class: 'edit-recipe-food-form-input' %>
    </div>

    <div class="edit-recipe-food-form-section">
      <%= form.label :food_id, class: 'edit-recipe-food-form-label' %>
      <%= form.collection_select :food_id, Food.all, :id, :name, { prompt: 'Select Food' }, class: 'edit-recipe-food-form-select' %>
    </div>

    <div class="edit-recipe-food-form-section">
      <%= form.submit 'Update Recipe Food', class: 'edit-recipe-food-form-submit' %>
    </div>
  <% end %>
</div>